#ifndef STMT
#define STMT(ID, Parent)
#endif

#ifndef ABSTRACT_STMT
#define ABSTRACT_STMT(ID, Parent)
#endif

#ifndef STMT_RANGE
#define STMT_RANGE(ID, First, Last)
#endif

#ifndef LAST_STMT
#define LAST_STMT(ID)
#endif


//= STMT(s) =//
STMT(Brace,       Stmt)
STMT(Return,      Stmt)
STMT(Defer,       Stmt)
STMT(Case,        Stmt)
STMT(Break,       Stmt)
STMT(Free,        Stmt)
STMT(Continue,    Stmt)


STMT(If,    Stmt)
STMT(Else,  Stmt)
STMT_RANGE(LabeledConditionalStmt, If, Else)

STMT(For,   LabeledStmt)
STMT(Match, LabeledStmt)
STMT_RANGE(LabeledStmt, If, Match)

STMT(Throw,       Stmt)
STMT(Catch,       Stmt)
STMT(Next,        Stmt)
LAST_STMT(Next)

// Undef macros to avoid leakage
#undef STMT
#undef STMT_RANGE
#undef ABSTRACT_STMT
#undef LAST_STMT
