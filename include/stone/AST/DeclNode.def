#ifndef DECL
#define DECL(ID, Parent)
#endif

#ifndef ABSTRACT_DECL
#define ABSTRACT_DECL(ID, Parent)
#endif

#ifndef DECL_RANGE
#define DECL_RANGE(ID, First, Last)
#endif

#ifndef LAST_DECL
#define LAST_DECL(ID)
#endif

// === Top-level Declarations ===
DECL(Join,     Decl)
DECL(Space,    Decl)
DECL(Fun,      Decl)
DECL(Some,     Decl)
DECL(Just,     Decl)
DECL(IfConfig, Decl)
DECL(Macro,    Decl)

// === Type Declarations ===
ABSTRACT_DECL(Type, Decl)
  DECL(Alias,     TypeDecl)
  DECL(Struct,    TypeDecl)
  DECL(Interface, TypeDecl)
  DECL(Enum,      TypeDecl)
  DECL(Using,     TypeDecl)
DECL_RANGE(TypeDecl, Alias, Using)

// === Operator Declarations ===
ABSTRACT_DECL(Operator, Decl)
  DECL(NewOperator,     OperatorDecl)
  DECL(FreeOperator,    OperatorDecl)
  DECL(InfixOperator,   OperatorDecl)
  DECL(PrefixOperator,  OperatorDecl)
  DECL(PostfixOperator, OperatorDecl)
DECL_RANGE(Operator, NewOperator, PostfixOperator)

// === Binding Declarations ===
ABSTRACT_DECL(Binding, Decl)
  DECL(Var,   BindingDecl)
    DECL(Param, VarDecl)
DECL_RANGE(Binding, Var, Param)




// === Final Tag ===
LAST_DECL(Macro)

// === Total Decl Range ===
DECL_RANGE(Decl, Join, Macro)


// === Cleanup ===
#undef DECL
#undef ABSTRACT_DECL
#undef DECL_RANGE
#undef LAST_DECL
