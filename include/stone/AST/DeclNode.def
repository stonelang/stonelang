#ifndef DECL
#define DECL(ID, Parent)
#endif

#ifndef DECL_RANGE
#define DECL_RANGE(ID, First, Last)
#endif

#ifndef LAST_DECL
#define LAST_DECL(ID)
#endif

// === Top-level Declarations ===
DECL(Join,     Decl)
DECL(Space,    Decl)
DECL(Fun,      Decl)
DECL(Some,     Decl)
DECL(Just,     Decl)
DECL(IfConfig, Decl)
DECL(Macro,    Decl)

// === Type Declarations ===
DECL(Alias,     Decl)
DECL(Struct,    Decl)
DECL(Interface, Decl)
DECL(Enum,      Decl)
DECL(Using,     Decl)
DECL_RANGE(TypeDecl, Alias, Using)

// === Operator Declarations ===

DECL(NewOperator,     Decl)
DECL(FreeOperator,    Decl)
DECL(InfixOperator,   Decl)
DECL(PrefixOperator,  Decl)
DECL(PostfixOperator, Decl)
DECL_RANGE(Operator, NewOperator, PostfixOperator)

// === Binding Declarations ===
DECL(Var,   Decl)
DECL(Param, Decl)
DECL_RANGE(Binding, Var, Param)

// === Final Tag ===
LAST_DECL(Macro)

// === Total Decl Range ===
DECL_RANGE(Decl, Join, Macro)


// === Cleanup ===
#undef DECL
#undef ABSTRACT_DECL
#undef DECL_RANGE
#undef LAST_DECL
